# MongoDB Atlas Connection String
# Replace username, password, and cluster with your actual MongoDB Atlas credentials
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/yaome?retryWrites=true&w=majority

# WebSocket Server Configuration
# Port for the standalone WebSocket server (keep default)
WEBSOCKET_PORT=3001

# Frontend WebSocket URL (CRITICAL - must start with NEXT_PUBLIC_ to be accessible in browser)
# For local development, use localhost
# For production, use your deployed WebSocket server URL
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:3001

# Production Configuration
# Set to 'production' when deploying to production
NODE_ENV=development

# Frontend URL for CORS (set this in your WebSocket server platform)
# For production, set to your Vercel app URL
FRONTEND_URL=http://localhost:3000

# Cloudinary Configuration
# Get your cloud name from your Cloudinary dashboard: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
# Upload preset for user video uploads (create in Cloudinary dashboard)
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=ml_default

# JWT Secret for wallet authentication
# Generate a strong secret key for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Solana Explorer Configuration
# For mainnet: https://solscan.io/token/
# For devnet: https://solscan.io/token/?cluster=devnet
# For testnet: https://solscan.io/token/?cluster=testnet
NEXT_PUBLIC_SOLSCAN_BASE_URL=https://solscan.io/token/

# Contract Address
NEXT_PUBLIC_CONTRACT_ADDRESS=5UUH9RTDiSpq6HKS6bp4NdU9PNJpXRXuiw6ShBTBhgH2
